<Page
    x:Class="BravoOne.UWP.MainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BravoOne.UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/Backgrounds/Camo.png" />
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />

            <RowDefinition Height="*" />

            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Bravo One" HorizontalAlignment="Center" Style="{StaticResource HeaderTextBlockStyle}" />

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,30,0,0" HorizontalAlignment="Center">
            <Button Content="New Game" FontSize="40" HorizontalAlignment="Center" Click="btnNewGame_Click" />
            <Button Content="Load Game" FontSize="40" HorizontalAlignment="Center" Margin="0,30,0,0" Click="btnLoadGame_Click" />
        </StackPanel>

        <TextBlock Grid.Row="2" Text="Version 0.1 (Build 1)" HorizontalAlignment="Center" Margin="0,0,0,20" />
    </Grid>
</Page>