<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Button" x:Name="MainButton">
        <Setter Property="FontFamily" Value="Fonts/MainFont.ttf#Tudor Victors" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="FontSize" Value="30" />
        <Setter Property="Background" Value="#171717" />
        <Setter Property="Foreground" Value="#AFAFAF" />
    </Style>

    <Style TargetType="TextBlock" x:Name="Header">
        <Setter Property="FontFamily" Value="Fonts/MainFont.ttf#Tudor Victors" />
        <Setter Property="FontSize" Value="50" />
        <Setter Property="Margin" Value="10,20,0,0" />
    </Style>

    <Style TargetType="TextBlock" x:Name="SubHeader">
        <Setter Property="FontFamily" Value="Fonts/MainFont.ttf#Tudor Victors" />
        <Setter Property="FontSize" Value="20" />
    </Style>

    <Style TargetType="TextBlock" x:Name="FieldHeader">
        <Setter Property="FontFamily" Value="Fonts/MainFont.ttf#Tudor Victors" />
        <Setter Property="FontSize" Value="16" />
    </Style>
</ResourceDictionary>